<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/campaign_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/activity_horizontal_margin">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/campaign_image"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/campaigns_image_description"/>

    <TextView
        android:id="@+id/campaign_name"
        style="@style/MyAppTheme.CardTitle"
        android:layout_below="@+id/campaign_image"
        android:layout_marginBottom="8dp"
        tools:text="My Campaign"/>

    <TextView
        android:id="@+id/campaign_dates"
        style="@style/MyAppTheme.CardSubtitle"
        android:layout_below="@+id/campaign_name"
        tools:text="Jan 01 2016 - Jan 01 2017"/>
  </RelativeLayout>
</android.support.v7.widget.CardView>
