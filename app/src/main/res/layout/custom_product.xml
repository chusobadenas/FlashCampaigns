<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    app:cardCornerRadius="@dimen/activity_horizontal_margin"
    app:cardElevation="@dimen/activity_horizontal_margin">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:contentDescription="@string/products_image_description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:id="@+id/product_price"
          style="@style/MyAppTheme.CardPrice"
          android:layout_marginBottom="8dp"
          android:layout_marginTop="8dp"
          tools:text="10â‚¬"/>

      <TextView
          android:id="@+id/product_name"
          style="@style/MyAppTheme.CardTitle"
          android:layout_marginBottom="8dp"
          tools:text="My Product"/>

      <TextView
          android:id="@+id/product_description"
          style="@style/MyAppTheme.CardDescription"
          tools:text="Awesome product"/>
    </LinearLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>
